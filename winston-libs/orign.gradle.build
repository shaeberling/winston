apply plugin: 'java'

sourceCompatibility = 1.8
version = '0.0.1'

jar {
    manifest {
        attributes 'Implementation-Title': 'Winston',
                   'Implementation-Version': version
    }
}


repositories {
   flatDir {
       dirs 'libs'
   }
}

dependencies {
    compile fileTree(dir: 'libs', include: ['*.jar'])
}

task wrapper(type: Wrapper) {
    gradleVersion = '2.2'
}
